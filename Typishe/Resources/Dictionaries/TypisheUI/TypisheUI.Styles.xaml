<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:setup="clr-namespace:Typishe.Setup">

    <Style
        x:Key="BackgroundGridStyle"
        TargetType="Grid">

        <Setter Property="Background" Value="{Binding Path=BackgroundBrush ,Source={x:Static setup:ApplicationSetup.VisualSetup}}"/>
    </Style>
</ResourceDictionary>